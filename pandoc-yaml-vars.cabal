category:            Text
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable pandoc-yaml-vars
  main-is:             Main.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.8 && <4.9
                     , containers
                     , pandoc >= 1.15
                     , pandoc-types >= 1.12
                     , parsec
                     , tasty >= 0.10
  -- hs-source-dirs:      
  default-language:    Haskell2010


test-suite tests
  type:           exitcode-stdio-1.0
  hs-source-dirs: tests .
  main-is:        Tests.hs
  other-modules:
                Processor
              , Config
              , Common

  other-extensions: 
  ghc-options: -Wall

  build-depends:  HUnit
                , base
                , containers
                , pandoc >= 1.16
                , pandoc-types >= 1.16
                , parsec
                , tasty >= 0.10
                , tasty-hunit >= 0.9

  default-language:    Haskell2010
